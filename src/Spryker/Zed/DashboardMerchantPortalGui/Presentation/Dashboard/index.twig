{% extends '@ZedUi/Layout/merchant-layout-main.twig' %}
{% import _self as view %}

{% block headSubTitle %}
    {{- 'Dashboard' | trans -}}
{% endblock %}

{% block content %}
    <web-mp-dashboard cloak>
        <h1 title>{{ 'Dashboard' | trans }}</h1>

        <div class="spy-row spy-row-gutter-lg">
            {% for dashboardCard in dashboardCards %}

                <div class="spy-col spy-col-gutter-lg">
                    <web-mp-dashboard-card cloak>
                        <div title class="mp-dashboard-card__heading">
                            {{ dashboardCard.title | raw }}
                        </div>

                        <div actions class="mp-dashboard-card__heading">
                            {% for actionButton in dashboardCard.actionButtons %}
                                <div class="mp-dashboard-card__heading-col">
                                    <web-spy-button-link url="{{ actionButton.url }}" size="sm">{{ actionButton.title | trans }}</web-spy-button-link>
                                </div>
                            {% endfor %}
                        </div>

                        <div class="spy-row spy-row-gutter-lg">
                            {{ dashboardCard.content | raw }}
                        </div>
                    </web-mp-dashboard-card>
                </div>
            {% endfor %}
        </div>
    </web-mp-dashboard>
{% endblock %}

{% block footerJs %}
    {{ view.importJsBundle('dashboard-merchant-portal-gui', importConfig) }}
    {{ parent() }}
{% endblock %}
